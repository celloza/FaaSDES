<Window x:Class="FaaSDES.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:viewmodel="clr-namespace:FaaSDES.UI.ViewModel" WindowState="Maximized"
        xmlns:skinmanager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        skinmanager:SfSkinManager.VisualStyle="Office2019Colorful"
        xmlns:local="clr-namespace:FaaSDES.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:DiagramVM></viewmodel:DiagramVM>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemBindingStyle}">
            <Setter Property="IsChecked" Value="{Binding IsCheckable , Mode=TwoWay}"/>
            <Setter Property="Foreground" Value="Black" />
        </Style>

        <!--Style for NodePort-->
        <Style TargetType="syncfusion:NodePort">
            <Setter Property="Shape" Value="{StaticResource Ellipse}"></Setter>
            <Setter Property="ShapeStyle">
                <Setter.Value>
                    <Style TargetType="Path">
                        <Setter Property="Fill" Value="Black"/>
                        <Setter Property="Stretch" Value="Fill"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Style for Node-->
        <Style TargetType="syncfusion:BpmnNode">
            <Setter Property="ShapeStyle">
                <Setter.Value>
                    <Style TargetType="Path">
                        <Setter Property="Fill" Value="White"/>
                        <Setter Property="Stretch" Value="Fill"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="syncfusion:BpmnFlow">
            <Setter Property="ConnectorGeometryStyle">
                <Setter.Value>
                    <Style TargetType="Path">
                        <Setter Property="Stroke" Value="Black"/>
                        <Setter Property="StrokeThickness" Value="1.5"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="TargetDecoratorStyle">
                <Setter.Value>
                    <Style TargetType="Path">
                        <Setter Property="Stroke" Value="Black"/>
                        <Setter Property="Fill" Value="Black"/>
                        <Setter Property="Stretch" Value="Fill"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" Orientation="Horizontal" FocusManager.IsFocusScope="True" Focusable="True">
            <syncfusion:MenuAdv>
                <!--File menu bar-->
                <syncfusion:MenuItemAdv Header="File" >
                    <syncfusion:MenuItemAdv Header="New" Command="{Binding NewCommand}"/>
                    <syncfusion:MenuItemAdv Header="Open..."  Command="{Binding LoadCommand}"/>
                    <Separator />
                    <syncfusion:MenuItemAdv Header="Save as..."  Command="{Binding SaveCommand}"/>
                    <Separator />
                    <syncfusion:MenuItemAdv Header="Export"  Command="{Binding ExportCommand}"/>
                    <syncfusion:MenuItemAdv Header="Print"  Command="{Binding PrintCommand}"/>
                </syncfusion:MenuItemAdv>

                <!--Edit menu bar-->
                <syncfusion:MenuItemAdv Header="Edit" >
                    <syncfusion:MenuItemAdv Header="Undo"  Command="syncfusion:DiagramCommands.Undo"/>
                    <syncfusion:MenuItemAdv Header="Redo" Command="syncfusion:DiagramCommands.Redo"/>
                    <Separator/>
                    <syncfusion:MenuItemAdv Header="Cut"  Command="syncfusion:DiagramCommands.Cut"/>
                    <syncfusion:MenuItemAdv Header="Copy"  Command="syncfusion:DiagramCommands.Copy"/>
                    <syncfusion:MenuItemAdv Header="Paste"  Command="syncfusion:DiagramCommands.Paste"/>
                    <Separator/>
                    <syncfusion:MenuItemAdv Header="Rotate Colockwise" IsEnabled="{Binding DataContext.IsItemSelected,ElementName=Diagram, Mode=TwoWay}" Command="{Binding RotateColockwiseCommand}"/>
                    <syncfusion:MenuItemAdv Header="Rotate Counter Colockwise" IsEnabled="{Binding DataContext.IsItemSelected,ElementName=Diagram, Mode=TwoWay}" Command="{Binding RotateCounterColockwiseCommand}"/>
                    <syncfusion:MenuItemAdv Header="Delete"  Command="syncfusion:DiagramCommands.Delete"/>
                    <Separator/>
                    <syncfusion:MenuItemAdv Header="Bring into Front" Command="syncfusion:DiagramCommands.BringToFront"/>
                    <syncfusion:MenuItemAdv Header="Bring into Back" Command="syncfusion:DiagramCommands.SendToBack"/>
                </syncfusion:MenuItemAdv>

                <!--Design menu bar-->
                <syncfusion:MenuItemAdv Header="Design">
                    <syncfusion:MenuItemAdv Header="Orientation">
                        <syncfusion:MenuItemAdv Header="Landscape" IsCheckable="True" IsChecked="{Binding LandscapeProperty, Mode=TwoWay}" CommandParameter="Landscape" Command="{Binding OrientationCommand}"/>
                        <syncfusion:MenuItemAdv Header="Portrait" IsCheckable="True" IsChecked="{Binding PortraitProperty, Mode=TwoWay}" CommandParameter="Portrait" Command="{Binding OrientationCommand}"/>
                    </syncfusion:MenuItemAdv>
                </syncfusion:MenuItemAdv>

                <!--Select menu bar-->
                <syncfusion:MenuItemAdv Header="Select">
                    <syncfusion:MenuItemAdv Header="Select All" Command="syncfusion:DiagramCommands.SelectAll"/>
                    <syncfusion:MenuItemAdv Header="Select All Nodes"  Command="{Binding SelectAllNodesCommand}"/>
                    <syncfusion:MenuItemAdv Header="Select All Connectors"  Command="{Binding SelectAllConnectorsCommand}"/>
                    <syncfusion:MenuItemAdv Header="Select None" Command="{Binding SelectNoneCommand}"/>
                </syncfusion:MenuItemAdv>

                <!--Tools menu bar-->
                <syncfusion:MenuItemAdv Header="Tools" >
                    <syncfusion:MenuItemAdv x:Name="SelectionTool" Command="{Binding SelectToolCommand}" CommandParameter="{Binding SelectToolProperty, Mode=TwoWay}" IsChecked="{Binding SelectToolProperty, Mode=TwoWay}" Header="Selection Tool"  />
                    <syncfusion:MenuItemAdv x:Name="PanTool"  Command="{Binding PanToolCommand}" CommandParameter="{Binding PanToolProperty, Mode=TwoWay}"  IsChecked="{Binding PanToolProperty, Mode=TwoWay}" Header="Pan Tool"/>
                    <syncfusion:MenuItemAdv Header="Connectors">
                        <syncfusion:MenuItemAdv Header="Straight" IsCheckable="True" IsChecked="{Binding StraightProperty, Mode=TwoWay}" CommandParameter="Straight" Command="{Binding ChangeConnectorTypeCommand}"/>
                        <syncfusion:MenuItemAdv Header="Orthogonal" IsCheckable="True" IsChecked="{Binding OrthogonalProperty, Mode=TwoWay}" CommandParameter="Orthogonal" Command="{Binding ChangeConnectorTypeCommand}"/>
                        <syncfusion:MenuItemAdv Header="Bezier" IsCheckable="True" IsChecked="{Binding BezierProperty, Mode=TwoWay}" CommandParameter="Bezier" Command="{Binding ChangeConnectorTypeCommand}"/>
                    </syncfusion:MenuItemAdv>
                    <syncfusion:MenuItemAdv x:Name="DrawTool" IsCheckable="True" IsChecked="{Binding DrawToolProperty, Mode=TwoWay}" CommandParameter="{Binding DrawToolProperty, Mode=TwoWay}" Header="Connector Draw Tool"/>
                </syncfusion:MenuItemAdv>

                <!--View menu bar-->
                <syncfusion:MenuItemAdv Header="View">
                    <syncfusion:MenuItemAdv x:Name="ShowLines"  IsCheckable="True" IsChecked="True" Header="Show Lines"  CommandParameter="{Binding ElementName=ShowLines, Path=IsChecked}" Command="{Binding ShowLinesCommand}"/>
                    <syncfusion:MenuItemAdv x:Name="SnapToGrid" IsCheckable="True" IsChecked="True" Header="Snap To Grid"  CommandParameter="{Binding ElementName=SnapToGrid, Path=IsChecked}" Command="{Binding SnapToGridCommand}"/>
                    <syncfusion:MenuItemAdv x:Name="SnapToObject" IsCheckable="True" IsChecked="True" Header="Snap To Object"  CommandParameter="{Binding ElementName=SnapToObject, Path=IsChecked}" Command="{Binding SnapToObjectCommand}"/>
                    <syncfusion:MenuItemAdv x:Name="ShowRuler" IsCheckable="True" IsChecked="True" Header="Show Ruler"  CommandParameter="{Binding ElementName=ShowRuler, Path=IsChecked}" Command="{Binding ShowRulerCommand}"/>
                    <syncfusion:MenuItemAdv x:Name="ShowPageBreaks" IsCheckable="True" IsChecked="True" Header="Show Page Breaks"  CommandParameter="{Binding ElementName=ShowPageBreaks, Path=IsChecked}" Command="{Binding ShowPageBreaksCommand}"/>
                    <Separator/>
                    <syncfusion:MenuItemAdv x:Name="FitToWidth" Header="Fit To Width" Command="{Binding FitToWidthCommand}"/>
                    <syncfusion:MenuItemAdv x:Name="FitToPage" Header="Fit To Page" Command="{Binding FitToPageCommand}"/>
                    <syncfusion:MenuItemAdv x:Name="ResetView"  Header="Reset View"  Command="syncfusion:DiagramCommands.Reset"/>
                </syncfusion:MenuItemAdv>

                <syncfusion:MenuItemAdv Header="Window">
                    <syncfusion:MenuItemAdv x:Name="ShowDocumentWindow" IsCheckable="True" IsChecked="True" Header="Document Window" CommandParameter="{Binding ElementName=ShowDocumentWindow, Path=IsChecked}" Command="{Binding ShowDocumentWindowCommand}"/>
                    <syncfusion:MenuItemAdv x:Name="ShowPropertiesPane" IsCheckable="True" IsChecked="True" Header="Properties Pane" CommandParameter="{Binding ElementName=ShowPropertiesPane, Path=IsChecked}" Command="{Binding ShowPropertiesPaneCommand}"/>
                </syncfusion:MenuItemAdv>

